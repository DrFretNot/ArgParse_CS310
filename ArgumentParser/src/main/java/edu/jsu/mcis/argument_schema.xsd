   <program>
    	<name>VolumeCalculator</name>
    	<description>Calculate the volume of a specified object.</description>
		<arguments>
			<positional>
				<name>length</name>
				<type>float</type>
				<description>the length of the object</description>
				<position>1</position>
				<valueset>6.0,7.0,8.0</valueset>
			</positional>
			<positional>
				<name>width</name>
				<type>float</type>
				<description>the width of the object</description>
				<position>2</position>
				<valueset>5.0,6.0,7.0</valueset>
			</positional>
			<positional>
				<name>height</name>
				<type>integer</type>
				<description>the height of the object</description>
				<position>3</position>
				<valueset>2,3,4</valueset>
			</positional>
			<named>
				<name>type</name>
				<shortname>t</shortname>
				<type>string</type>
				<description>the shape of the object</description>
				<default>box</default>
				<valueset>box,pyramid,ellipsoid</valueset>
			</named>
			<named>
				<name>digits</name>
				<shortname>d</shortname>
				<type>integer</type>
				<description>the number of decimal digits to truncate at</description>
				<default>4</default>
			</named>
		</arguments>
	</program>